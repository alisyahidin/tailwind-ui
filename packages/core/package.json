{
  "name": "@alisyahidin/core",
  "private": true,
  "version": "1.2.1",
  "description": "EDTS Design System",
  "author": "Ali Syahidin <ali.syahidin@sg-dsa.com>",
  "homepage": "https://sg-edts.com",
  "license": "ISC",
  "main": "./index.js",
  "files": [
    "styles/**/*.js",
    "styles/themes.css",
    "index.js",
    "colors"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prejss-cli": "^0.3.3",
    "tailwindcss": "^3.0.13",
    "watch": "^1.0.2"
  },
  "scripts": {
    "copy": "node scripts/copy-file.js",
    "components": "postcss --config src/components src/components/**/*.css --base src --dir ./dist/styles",
    "components:merge": "cat ./dist/styles/components/*.css > ./dist/styles/index.css",
    "themes": "postcss ./src/themes/index.css -o ./dist/styles/themes.css --config ./src/themes",
    "prejss": "prejss-cli ./dist/styles/index.css --format commonjs",
    "prejss:components": "prejss-cli ./dist/styles/components --format commonjs",
    "clear:build": "rm -Rf ./dist",
    "watch:build": "watch 'npm run build' src",
    "build": "npm run clear:build && npm run copy && npm run components && npm run components:merge && npm run prejss && npm run prejss:components && npm run themes"
  },
  "publishConfig": {
    "access": "public"
  }
}