{
  "name": "core",
  "private": true,
  "version": "1.3.2",
  "description": "EDTS Design System",
  "author": "Ali Syahidin <ali.syahidin@sg-dsa.com>",
  "homepage": "https://sg-edts.com",
  "license": "ISC",
  "main": "./index.js",
  "files": [
    "styles/**/*.js",
    "styles/themes.css",
    "index.js",
    "colors"
  ],
  "dependencies": {
    "css-selector-tokenizer": "^0.8.0",
    "postcss-js": "^4.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prejss-cli": "^0.3.3",
    "tailwindcss": "^3.0.13",
    "watch": "^1.0.2"
  },
  "scripts": {
    "copy": "node scripts/copy-file.js",
    "precomponents": "postcss --config src/components src/components/**/*.css --base src --dir ./dist",
    "components": "cat ./dist/components/*.css > ./dist/components/index.css",
    "postcomponents": "prejss-cli ./dist/components/ --format commonjs",
    "preutilities": "postcss --config src/utilities src/utilities/**/*.css --base src --dir ./dist",
    "utilities": "cat ./dist/utilities/*.css > ./dist/utilities/index.css",
    "postutilities": "prejss-cli dist/utilities/index.css --format commonjs",
    "themes": "postcss ./src/themes/index.css -o ./dist/themes.css --config ./src/themes",
    "clear:build": "rm -Rf ./dist",
    "watch:build": "watch 'npm run build' src",
    "build": "npm run clear:build && npm run copy && npm run utilities && npm run components && npm run themes"
  },
  "publishConfig": {
    "access": "public"
  }
}