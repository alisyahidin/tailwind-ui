{
  "name": "@alisyahidin/core",
  "private": false,
  "version": "1.0.3",
  "description": "EDTS Design System",
  "author": "Ali Syahidin <ali.syahidin@sg-dsa.com>",
  "homepage": "https://sg-edts.com",
  "license": "ISC",
  "main": "./index.js",
  "files": [
    "components",
    "dist/*.js",
    "dist/{components}.css",
    "index.js"
  ],
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "prejss-cli": "^0.3.3",
    "tailwindcss": "^3.0.13"
  },
  "scripts": {
    "components": "postcss --config src/components src/components/**/*.css --base src --dir dist",
    "components:merge": "cat ./dist/components/*.css > ./dist/components.css",
    "prejss": "prejss-cli ./dist/components.css --format commonjs",
    "babel": "babel ./src/react-components --out-dir ./components",
    "build": "npm run components && npm run components:merge && npm run prejss && npm run babel"
  },
  "publishConfig": {
    "access": "public"
  }
}
