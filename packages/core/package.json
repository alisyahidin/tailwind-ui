{
  "name": "@alisyahidin/core",
  "private": false,
  "version": "1.0.10",
  "description": "EDTS Design System",
  "author": "Ali Syahidin <ali.syahidin@sg-dsa.com>",
  "homepage": "https://sg-edts.com",
  "license": "ISC",
  "main": "./index.js",
  "types": "./components/index.d.ts",
  "files": [
    "components",
    "styles/*.js",
    "styles/{index}.css",
    "index.js"
  ],
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "prejss-cli": "^0.3.3",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "components": "postcss --config src/components src/components/**/*.css --base src --dir styles",
    "components:merge": "cat ./styles/components/*.css > ./styles/index.css",
    "prejss": "prejss-cli ./styles/index.css --format commonjs",
    "babel": "babel ./src/react-components --out-dir ./components",
    "tsc-compile": "tsc",
    "clear-build": "rm -Rf ./components ./styles",
    "build": "npm run clear-build && npm run components && npm run components:merge && npm run prejss && npm run babel && npm run tsc-compile"
  },
  "publishConfig": {
    "access": "public"
  }
}
